{
  "type": "module",
  "name": "chessweeper",
  "version": "1.0.0",
  "description": "Chess X Minesweeper",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "vite",
    "preview": "vite preview",
    "build": "tsc && vite build",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "format": "npx prettier --write .",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "tsc": "tsc --noEmit",
    "prepare": "husky install"
  },
  "browserslist": "defaults and supports async-functions",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Xwilarg/Chessweeper.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Xwilarg/Chessweeper/issues"
  },
  "homepage": "https://github.com/Xwilarg/Chessweeper#readme",
  "dependencies": {
    "boardgame.io": "^0.50.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "@vitejs/plugin-react": "^2.2.0",
    "@vitest/coverage-c8": "^0.25.5",
    "eslint": "^8.29.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-vitest-globals": "^1.2.0",
    "husky": "^8.0.0",
    "jsdom": "^20.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.0",
    "typescript": "^4.9.3",
    "vite": "^3.2.5",
    "vitest": "^0.25.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
